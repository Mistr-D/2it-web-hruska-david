<script>
  const observer = new IntersectionObserver(entries => {
    entries.forEach(entry => { if (entry.isIntersecting) entry.target.classList.add('show'); });
  }, { threshold: 0.2 });
  document.querySelectorAll('.fade-up').forEach(el => observer.observe(el));

  const hero = document.getElementById('hero-title');
  hero.style.opacity = 0;
  hero.style.transform = 'translateY(40px)';
  window.addEventListener('load', () => {
    hero.style.transition = 'all 1.2s ease';
    hero.style.opacity = 1;
    hero.style.transform = 'translateY(0)';
  });

  const toggle = document.getElementById('theme-toggle');
  toggle.addEventListener('click', () => {
    const isLight = document.body.style.background === 'var(--bg-light)';

    document.body.style.background = isLight ? 'var(--bg-dark)' : 'var(--bg-light)';
    document.body.style.color = isLight ? 'var(--text-dark)' : 'var(--text-light)';

    document.querySelectorAll('.card').forEach(c => {
      c.style.borderColor = isLight ? 'var(--border-dark)' : 'var(--border-light)';
      c.style.color = isLight ? 'var(--text-dark)' : 'var(--text-light)';
    });

    document.querySelectorAll('a.button').forEach(b => {
      b.style.color = isLight ? 'var(--text-dark)' : 'var(--text-light)';
      b.style.borderColor = isLight ? 'var(--border-dark)' : 'var(--border-light)';
    });

    // update animated circles color for visibility
    document.body.style.setProperty('--grid-dark', isLight ? 'rgba(0,0,0,0.05)' : 'rgba(255,255,255,0.05)');

    toggle.textContent = isLight ? 'üåô' : '‚òÄÔ∏è';
  });
</script>

